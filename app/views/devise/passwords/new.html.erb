<div class='form'>
  <div class='form__logo'>
    <h1 class='form__logo-icon'>Post<span>It</span></h1>
    <p>Share with your friends what's on your mind!</p>
  </div>
  <div class='form__fields'>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>

      <%= render "devise/shared/error_messages", resource: resource %>

      <div class='form__fields-data'>
        <div class='form__field-position' data-controller='empty-input'>
          <%= f.email_field :email, autocomplete: "email", class:"form__field", data: { action: "change->empty-input#update", target: "empty-input.input" } %>
          <%= f.label :email, class:"form__label", data: { target: "empty-input.label" } %>
        </div>
      </div>

      <div class="actions">
        <%= f.submit "Reset password instructions", class:'btn btn--secondary form__field-btn' %>
      </div>
    <% end %>

    <hr>

    <div class='form__links'>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

